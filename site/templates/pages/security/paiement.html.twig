{% extends 'base.html.twig' %}

{% block title %}AntoineFactory | Paiement{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    <link href="{{asset('CSS/default.css')}}" rel="stylesheet"/>
    <link href="{{asset('CSS/commande.css')}}" rel="stylesheet"/>
{% endblock %}

{% block header %}
    {% include "partials/_header.html.twig" %}
    <div class="actions_supp">
    </div>
{% endblock %}

{% block body %}
<section id="content" >
    <form class="formulaire" action="{{ path('panier.finalisation' )}}" method="post">
        <div class="cord-bancaire">
            <h1 id="titre-bancaire">Coordonées bancaires : </h1>
            <div class="input_container" id="numero-carte">
                <label for="num-carte">Numéro carte bancaire : </label>
                <input id="num-carte" type="text" maxlength="19" placeholder="1111 2222 3333 4444" oninput="formatCardNumber()" required>
            </div>
            <div class="input_container" id="date-expire-carte">
                <label for="date-carte">Date expiration : </label>
                <input id="date-carte" type="text" maxlength="5" placeholder="MM/YY" oninput="validateMonthAndYear()" required>
            </div>
            <div class="input_container" id="code-carte">
                <label for="cvc">Code de carte : </label>
                <input id="cvc" type="text" maxlength="3" pattern="[0-9]*" placeholder="CVC" oninput="formatCVCNumber()" required>
            </div>
        </div>
        <div class="cord-livraison">
            <h1 id="titre-livraison">Coordonées de livraison : </h1>
             <div class="input_container" id="adresse-livraison">
                <label>Adresse de livraison : </label>
                <input  id="adresse" required name="adresse" placeholder="1 rue Maréchal Joffre 44000 Nantes" type="text" class="adresse_postale" required>
                <div class="adresse_postale_suggestion"></div>
            </div>
            <div class="input_container" id="numero-tel">
                <label for="tel">Numéro de téléphone : </label>
                <input id="tel" type="tel" maxlength="14" placeholder="01 23 45 67 89" oninput="formatTelNumber()">
            </div>
        </div>
        <input type="submit" name="paiment" class="bouton" jaune value="Valider le paiement">
    </form>
</section>
<script src="{{asset('Javascript/autocompleteadress.js')}}"></script>
{% endblock %}